<div class = 'box'>
  <%= form_with(model: article) do |form| %>
    <% if article.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(article.errors.count, "error") %>
          Статья не может быть сохранена:</h2>
        <ul>
          <% article.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class=''field>
      <div class="field">
        <%= form.text_field :author, class: "input", placeholder: 'Автор (по умолчанию будет <Пользователь>)'%>
      </div>
      <%= form.text_field :title , class: "input", placeholder: 'Заголовок'%>
      <div>
        <%= form.fields_for :texts do |t| %>
          <%= t.text_area :text, class: "textarea" , cols: 40, rows: 10, placeholder: 'Введите текст статьи'%>
        </div>
        <%= t.datetime_local_field :changed_on ,value: DateTime.current.strftime("%Y-%m-%dT%T"), class: "input", disabled: :true%>
      <% end %>
      <div class="control">
        <%= form.submit text_button, class: 'button is-fullwidth is-primary is-outlined' %>
      </div>
    </div>
  <% end %>
</div>

<div class = 'box'>
<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %>
        prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class=''field>
    <div class="field">
      <%= form.text_field :author, class: "input", placeholder: :author%>
    </div>
      <%= form.text_field :title , class: "input", placeholder: :title%>
      <div>
      <%= form.text_area :text, class: "textarea" , cols: 40, rows: 15, placeholder: :text%>
      </div>
      <%= form.number_field :status, class: "input", placeholder: :status %>
      <%= form.number_field :version , class: "input" , placeholder: :version%>
      <%= form.datetime_local_field :changed_on , class: "input", placeholder: :changed_on%>
    <div class="control">
      <%= form.submit class: 'button' %>
    </div>

  </div>
<% end %>
</div>

<div class = 'box'>
<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %>
        prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='field'>
    <div class="field">
      <%= form.text_field :author, class: "input", placeholder: :author, disabled: :true%>
    </div>
      <%= form.text_field :title , class: "input", placeholder: :title,  disabled: :true%>
      <div>
      <%= form.text_area :text, class: "input textarea is-medium" , placeholder: :text%>
      </div>
      <%= form.number_field :status, class: "input", placeholder: :status , disabled: :true%>
      <%= form.number_field :version , class: "input" , placeholder: :version , disabled: :true%>
      <%= form.datetime_local_field :changed_on , class: "input", placeholder: :changed_on , disabled: :true%>
    <div class="control">
      <%= form.submit class: 'button' %>
    </div>

  </div>
<% end %>
</div>

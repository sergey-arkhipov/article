<div class = 'box'>
  <%= form_with(model: article) do |form| %>
    <% if article.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(article.errors.count, "ошибка") %>
          не позволяет сохранить изменения:</h2>
        <ul>
          <% article.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class='field'>
      <div class="field">
        <b>
          <%= form.label 'Автор:'%>
        </b>
        <%= form.text_field :author, class: "input", placeholder: :author, disabled: :true%>
      </div>
      <b>
        <%= form.label 'Заголовок:'%>
      </b>
      <%= form.text_field :title , class: "input", placeholder: :title,  disabled: :true%>
      <div>
        <b>Содержание:</b>
        <%= form.fields_for texts do |t|%>
          <%= t.text_area :text, class: "input textarea is-medium" , placeholder: :text%>
        </div>
        <b>
          <%= t.label 'Опубликовано:'%>
        </b>
        <%= t.datetime_local_field :changed_on , class: "input", placeholder: :changed_on , disabled: :true%>
      <% end %>
      <div class="control">
        <%= form.submit text_button, class: 'button is-fullwidth is-danger is-outlined' %>
      </div>
    </div>
  <% end %>
</div>
